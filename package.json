{
	"name": "github-action-repo-sync",
	"version": "3.2.0",
	"private": true,
	"description": "GitHub Action to detect and sync project metadata to GitHub.",
	"keywords": [
		"github-action",
		"action",
		"repo",
		"project",
		"metadata"
	],
	"homepage": "https://github.com/kitschpatrol/github-action-repo-sync",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/github-action-repo-sync.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"type": "module",
	"scripts": {
		"build": "rolldown src/index.ts -d dist -p node -f esm",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"fix": "kpi fix",
		"lint": "kpi lint",
		"test": "vitest",
		"updatetag": "git tag -d v3 && git push origin :v3 && git tag -a v3 -m '' && git push origin v3"
	},
	"devDependencies": {
		"@actions/core": "^3.0.0",
		"@actions/github": "^9.0.0",
		"@kitschpatrol/shared-config": "^5.13.0",
		"@octokit/rest": "^22.0.1",
		"@types/node": "^20.19.30",
		"confbox": "^0.2.2",
		"rolldown": "1.0.0-rc.2",
		"typescript": "~5.9.3",
		"vitest": "^4.0.18"
	},
	"packageManager": "pnpm@10.28.2",
	"engines": {
		"node": ">=20.0.0"
	}
}
